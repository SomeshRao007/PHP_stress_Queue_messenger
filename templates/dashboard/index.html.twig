{% extends 'base.html.twig' %}

{% block body %}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    {# === LEFT: New Job Form === #}
    <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-semibold mb-4">Create New Job</h2>

            <form method="POST" action="{{ path('job_create') }}">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Job Type</label>
                    <select name="job_type" id="jobTypeSelect"
                            class="w-full rounded border-gray-300 shadow-sm p-2 border focus:ring-indigo-500 focus:border-indigo-500"
                            onchange="toggleFields()">
                        {% for jt in jobTypes %}
                            <option value="{{ jt.value }}">{{ jt.label }}</option>
                        {% endfor %}
                    </select>
                </div>

                {# CPU Stress Fields #}
                <div id="fields-cpu_stress">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700">Duration (seconds)</label>
                        <input type="number" name="duration" value="30" min="5" max="300"
                               class="w-full rounded border p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700">Algorithm</label>
                        <select name="algorithm" class="w-full rounded border p-2 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="primes">Prime Numbers</option>
                            <option value="pi">Pi Calculation (Leibniz)</option>
                        </select>
                    </div>
                </div>

                {# S3 Backup Fields #}
                <div id="fields-s3_backup" style="display:none">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700">S3 Bucket</label>
                        <input type="text" name="bucket" value="{{ defaults.s3_bucket }}"
                               class="w-full rounded border p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700">S3 Key (path)</label>
                        <input type="text" name="s3_key" value="backups/demo.zip"
                               class="w-full rounded border p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                </div>

                {# SSH Fields #}
                <div id="fields-ssh_command" style="display:none">
                    <p class="text-xs text-gray-500 mb-3 bg-gray-50 rounded p-2">
                        Connecting to <span class="font-mono font-medium">{{ defaults.ssh_user }}@{{ defaults.ssh_host }}</span>
                        (configured in <span class="font-mono">.env</span>)
                    </p>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700">Command</label>
                        <input type="text" name="ssh_command" value="uptime"
                               class="w-full rounded border p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700">SSH Port</label>
                        <input type="number" name="ssh_port" value="22"
                               class="w-full rounded border p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                </div>

                {# Number of Jobs (common to all types) #}
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Number of Jobs</label>
                    <input type="number" name="job_count" value="1" min="1" max="100"
                           class="w-full rounded border p-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <p class="text-xs text-gray-400 mt-1">Schedule multiple identical jobs at once (1-100)</p>
                </div>

                <button type="submit"
                        class="w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700 transition font-medium">
                    Dispatch Job(s)
                </button>
            </form>
        </div>
    </div>

    {# === RIGHT: Job List === #}
    <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="px-6 py-4 border-b flex items-center justify-between">
                <h2 class="text-lg font-semibold">Job Queue</h2>
                <span class="text-sm text-gray-500">{{ jobs|length }} jobs</span>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Progress</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% for job in jobs %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-3 text-sm font-mono">{{ job.id }}</td>
                            <td class="px-4 py-3 text-sm">{{ job.type.label }}</td>
                            <td class="px-4 py-3 text-sm">
                                {% set statusColors = {
                                    'pending': 'bg-yellow-100 text-yellow-800',
                                    'processing': 'bg-blue-100 text-blue-800',
                                    'completed': 'bg-green-100 text-green-800',
                                    'failed': 'bg-red-100 text-red-800',
                                    'cancelled': 'bg-gray-100 text-gray-800',
                                } %}
                                <span class="inline-flex px-2 py-1 rounded-full text-xs font-medium {{ statusColors[job.status.value] }}">
                                    {{ job.status.value|capitalize }}
                                </span>
                            </td>
                            <td class="px-4 py-3 text-sm">
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div class="bg-indigo-600 h-2 rounded-full transition-all" style="width: {{ job.progress }}%"></div>
                                </div>
                                <span class="text-xs text-gray-500">{{ job.progress }}%</span>
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-500">{{ job.createdAt|date('Y-m-d H:i:s') }}</td>
                            <td class="px-4 py-3 text-sm space-x-2">
                                <a href="{{ path('job_show', {id: job.id}) }}"
                                   class="text-indigo-600 hover:text-indigo-900 font-medium">View</a>
                                {% if job.status.value == 'pending' %}
                                    <form method="POST" action="{{ path('job_cancel', {id: job.id}) }}" class="inline">
                                        <button type="submit" class="text-red-600 hover:text-red-900 font-medium">Cancel</button>
                                    </form>
                                {% endif %}
                                {% if job.status.value in ['completed', 'failed', 'cancelled'] %}
                                    <form method="POST" action="{{ path('job_delete', {id: job.id}) }}" class="inline"
                                          onsubmit="return confirm('Delete this job?')">
                                        <button type="submit" class="text-gray-400 hover:text-gray-600">Delete</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="px-4 py-8 text-center text-gray-500">
                                No jobs yet. Create one using the form on the left.
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
function toggleFields() {
    const val = document.getElementById('jobTypeSelect').value;
    document.querySelectorAll('[id^="fields-"]').forEach(el => el.style.display = 'none');
    const target = document.getElementById('fields-' + val);
    if (target) target.style.display = 'block';
}

// Auto-refresh every 5 seconds if there are processing jobs
{% set processingCount = jobs|filter(j => j.status.value == 'processing' or j.status.value == 'pending')|length %}
{% if processingCount > 0 %}
setTimeout(() => location.reload(), 5000);
{% endif %}
</script>
{% endblock %}
